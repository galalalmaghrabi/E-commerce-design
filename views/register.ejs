<%- include('parts/head') %>
  <%- include('parts/navbar') %>
    <section class="login-page container d-flex">
      <div class="col-xl-6 col-lg-6 col-md-8 col-sm-10">
        <form action="/register" method="post">
          <h2>Register</h2>
          <span>
            Enter Register details to create account
          </span>
          <div class="form-group">
            <label for="email">
              Username Or Email Address
            </label>
            <input type="email" id="email" name="email" placeholder="Username Or Email Address" required min="8">
          </div>
          <div class="form-group">
            <label for="password">
              Password
            </label>
            <input type="password" id="password" name="password" placeholder="Password" required min="5">
          </div>
          <div class="form-group">
            <label for="rePassword">
              Password
            </label>
            <input type="password" id="rePassword" name="rePassword" placeholder="Password" required min="5">
          </div>
          <div class="signup-link">
            <p>
              Do you have an account?
               <a href="/login">login</a>
              here
            </p>
            <button type="submit" class="btn btn-primary">Sign up</button>
          </div>
        </form>
      </div>
    </section>
    <%- include('parts/footer') %>