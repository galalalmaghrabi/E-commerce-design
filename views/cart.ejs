<%- include('parts/head') %>
  <%- include('parts/navbar') %>
    <% console.log(items)%> 
      <section class="col-12 container" style="display:flex ;justify-content: center;align-items: center;margin: 50px 0px;">
        <div class="col-xl-8 col-lg-8 col-md-10 col-sm-10" >
          <div class="site-blocks-table">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th class="product-thumbnail">Image</th>
                  <th class="product-name">Product</th>
                  <th class="product-price">Price</th>
                  <th class="product-quantity">Quantity</th>
                  <th class="product-total">Total</th>
                  <th class="product-remove">Remove</th>
                </tr>
              </thead>
              <tbody>
                <% for(let item of items){ %>
                  <form action="/delete" style="height: 100px ;" method="post" >
                    <input type="hidden" name="itemId" value="<%= item._id  %>">
                    <tr style="height:100% ;">
                      <td class="product-thumbnail" style="height:100% ;">
                        <img src="<%= item.image  %>" alt="Image" class="img-fluid" style="height:100px ;width: 250px;" >
                      </td>
                      <td class="product-name">
                        <h2 class="h5 text-black" style="text-align: center;"><%= item.name  %></h2>
                      </td>
                      <td>$<%= item.price  %>.00</td>
                      <td>
                        <div class="input-group mb-3" style="max-width: 120px;">
                          <input type="text" class="form-control text-center" value="<%= item.amount  %>" placeholder="" aria-label="Example text with button addon" aria-describedby="button-addon1" disabled>
                        </div>
        
                      </td>
                      <td>$<%=  Number(item.price) * Number(item.amount)  %>.00</td>
                      <td><button class="btn btn-primary btn-sm" type="submit">X</button></td>
                    </tr>
                  </form>
                  <% } %>  
    
              </tbody>
            </table>
            <div class="col-12 d-flex" style="justify-content:center ;align-items: center;">
              <form action="/deleteAll" method="post">
                <button type="submit" class="btn btn-primary">Delete All</button>
                <button type="submit" class="btn btn-primary">Order</button>
              </form>
            </div>
          </div>
        </div>
      </section>
  <%- include('parts/footer') %>